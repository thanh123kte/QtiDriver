<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name="com.qtifood.driver.DriverApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QtiDriverApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        
        <!-- Login Activity (Launcher) -->
        <activity
            android:name="com.qtifood.driver.presentation.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Driver Info Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.driverinfo.DriverInfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Driver Home Activity (Main) -->
        <activity
            android:name="com.qtifood.driver.presentation.home.DriverHomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Driver Profile Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.profile.DriverProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Settings Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.settings.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Documents Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.documents.DocumentsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Wallet Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.wallet.WalletActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Transaction Detail Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.wallet.TransactionDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.qtifood.driver.presentation.history.DeliveryHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.qtifood.driver.presentation.history.DeliveryHistoryDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.qtifood.driver.presentation.income.IncomeStatsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Order Detail Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.order.OrderDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Main Activity -->
        <activity
            android:name="com.qtifood.driver.presentation.main.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name="com.qtifood.driver.data.firebase.DriverFCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Location Tracking Service -->
        <service
            android:name="com.qtifood.driver.service.LocationTrackingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />
        
        <!-- FileProvider for Camera -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
            
    </application>

</manifest>
