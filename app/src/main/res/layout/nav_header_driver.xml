<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/nav_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Driver Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivDriverAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Driver Avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_avatar"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <!-- Driver Name -->
    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tên Tài Xế"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Driver Phone -->
    <TextView
        android:id="@+id/tvDriverPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0123456789"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <!-- Account Status (Online/Busy/Offline) -->
    <TextView
        android:id="@+id/tvAccountStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_status_badge"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Trang thai"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <!-- Verification Status -->
    <TextView
        android:id="@+id/tvVerificationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_status_pending"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Đang chờ duyệt"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>
